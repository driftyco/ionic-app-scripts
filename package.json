{
  "name": "@ionic/app-scripts",
  "version": "0.0.25",
  "description": "Scripts for Ionic Projects",
  "homepage": "http//ionicframework.com/",
  "author": "Ionic Team <hi@ionic.io> (http://ionic.io)",
  "license": "MIT",
  "bin": {
    "ionic-app-scripts": "./bin/ionic-app-scripts.js"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-package && npm run copy-content && npm run copy-config && npm run copy-bin",
    "copy-package": "node ./scripts/copy-package",
    "copy-content": "cp ./LICENSE ./dist/LICENSE && cp ./README.md ./dist/README.md",
    "copy-config": "cp -R ./src/config ./dist/config",
    "copy-bin": "node ./scripts/copy-bin",
    "clean": "rm -rf ./dist",
    "test": "node node_modules/.bin/jasmine JASMINE_CONFIG_PATH=src/spec/jasmine.config.json || true",
    "watch": "npm run clean && tsc --watch"
  },
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "6.4.1",
    "chokidar": "1.6.0",
    "clean-css": "3.4.19",
    "cross-spawn": "4.0.0",
    "fs-extra": "0.30.0",
    "node-sass": "3.9.3",
    "postcss": "5.2.0",
    "rollup": "0.36.0",
    "rollup-plugin-commonjs": "5.0.4",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-pluginutils": "1.5.2",
    "tslint": "3.15.1",
    "tslint-eslint-rules": "1.5.0",
    "uglify-js": "2.7.3"
  },
  "devDependencies": {
    "@types/clean-css": "3.4.29",
    "@types/fs-extra": "0.0.31",
    "@types/jasmine": "2.2.33",
    "@types/node": "6.0.38",
    "@types/uglify-js": "2.0.27",
    "jasmine": "^2.5.2",
    "tslint": "3.15.1",
    "tslint-ionic-rules": "0.0.5",
    "typescript": "^2.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/driftyco/ionic-app-scripts.git"
  },
  "bugs": {
    "url": "https://github.com/driftyco/ionic-app-scripts/issues"
  }
}
